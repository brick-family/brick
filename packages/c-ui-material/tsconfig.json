{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    // "baseUrl": "./",
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "use-context-selector": [
        "./node_modules/use-context-selector"
      ],
      "fast-equals": [
        "./node_modules/fast-equals"
      ]
    },
  },
  "include": [
    "src",
    "lowcode",
    "typings.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}